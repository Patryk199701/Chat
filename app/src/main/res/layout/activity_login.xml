<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="345dp"
            android:layout_height="386dp" app:srcCompat="@drawable/whoareyou"
            tools:layout_editor_absoluteY="76dp" tools:layout_editor_absoluteX="42dp" android:id="@+id/imageView2"/>
    <EditText
            android:layout_width="333dp"
            android:layout_height="48dp"
            android:text = ""
            android:id="@+id/login" android:layout_marginTop="512dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:importantForAutofill="no"/>
    <Button
            android:text="Set Login"
            android:layout_width="326dp"
            android:layout_height="45dp"
            android:id="@+id/setLogin" android:layout_marginTop="572dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
</android.support.constraint.ConstraintLayout>